# =============================================================================
# Postiz - eblej24.com Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Internal services use Docker container names (internal network)
# External URLs use *.eblej24.com subdomains (via Caddy)
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
# External URLs (accessed via Caddy reverse proxy)
POSTIZ_MAIN_URL=https://social.eblej24.com
POSTIZ_FRONTEND_URL=https://social.eblej24.com
POSTIZ_BACKEND_URL=https://social.eblej24.com/api

# JWT secret - generate with: openssl rand -base64 32
POSTIZ_JWT_SECRET=your-secure-random-jwt-secret-here

# Registration control
POSTIZ_DISABLE_REGISTRATION=false

# -----------------------------------------------------------------------------
# Postiz Database (Internal Network)
# -----------------------------------------------------------------------------
# Uses Docker container name 'postiz-postgres' on internal network
POSTGRES_USER=postiz-user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=postiz-db-local
POSTIZ_DATABASE_URL=postgresql://postiz-user:your-secure-postgres-password@postiz-postgres:5432/postiz-db-local

# -----------------------------------------------------------------------------
# Temporal Database (Internal Network)
# -----------------------------------------------------------------------------
# Uses Docker container name 'temporal-postgres' on internal network
TEMPORAL_POSTGRES_USER=temporal
TEMPORAL_POSTGRES_PASSWORD=your-secure-temporal-password
TEMPORAL_POSTGRES_DB=temporal

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
POSTIZ_STORAGE_PROVIDER=local

# Cloudflare R2 (optional - uncomment to use)
# POSTIZ_STORAGE_PROVIDER=cloudflare
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_ACCESS_KEY=your-access-key
# CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-access-key
# CLOUDFLARE_BUCKETNAME=your-bucket-name
# CLOUDFLARE_BUCKET_URL=https://your-bucket-url.r2.cloudflarestorage.com/
# CLOUDFLARE_REGION=auto

